<h1>編集</h1>
<%= form_for(@article) do |f| %>
	<h4>タイトル</h4>
	<%= f.text_field :title %>
	<h4>本文</h4>
	<%= f.text_area :body %>
	<h4>天気</h4>
	<%= f.text_field :weather %>
	<h4>画像</h4>
	<%= f.attachment_field :image %>

	<%= f.submit "保存" %>
<% end %>

<%= link_to "戻る", article_path(@article.id) %>
