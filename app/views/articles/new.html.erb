<h1>新規投稿</h1>

<%= form_for(@article) do |f| %>
	
	<h4>天気</h4>
	<%= f.text_field :weather %>

	<h4>タイトル</h4>
	<%= f.text_field :title %>

	<h4>本文</h4>
	<%= f.text_area :body %>

	<h4>画像</h4>
	<%= f.attachment_field :image %>


	<%= f.submit "投稿" %>

<% end %>
<% if @article.errors.any? %>
			  <div id="error_explanation" class="alert alert-danger">
			    <ul>
			      <% @article.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			    </ul>
			  </div>
			<% end %>